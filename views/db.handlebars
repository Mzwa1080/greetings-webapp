<title>Greeted names</title>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


<div class="container">
  <h4 class="center">Greeted Names</h4>

  <div class="row left">
    <form class="" action="/greetings" method="post">
      <button class="btn waves-effect green accent-4"><i class="fas fa-home"></i> </button>
    </form>
  </div>

  <table class="row">
    <tr>
      <th>Name</th>
      <th>Counter</th>
      <!-- <th>Language</th> -->
    </tr>

    {{#each users}}
      <tr>
        <td>{{name}}</td>
        <td>{{counter}}</td>
        <!-- <td>{{language}}</td> -->
      </tr>
    {{/each}}
  </table>



</div>
<div class="row">
  <div class="col 12 s12 m12 left">
    <a href="/reset"><button class="btn waves-effect deep-orange darken-3 EnterBtn fixed" type="submit" name="reset" value=""><i class="far fa-trash-alt"></i></button></a>
  </div>
</div>
